                case 2:
                    level = '<span class="badge bg-level-2">Level A2 - Pre-intermediate</span>';
                    break;
                case 3:
                    level = '<span class="badge bg-level-3">Level B1 - Intermediate</span>';
                    break;
                case 4:
                    level = '<span class="badge bg-level-4">Level B2 - Upper-Intermediate</span>';
                    break;
                case 5:
                    level = '<span class="badge bg-level-5">Level C1 - Advanced</span>';
                    break;
                case 6:
                    level = '<span class="badge bg-level-6">Level C2 - Mastery</span>';
                    break;
                default:
                    level = '';
                    break;
            }

            return level;
        }
